# Gmail API (Desktop OAuth client)
GMAIL_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_client_secret_here
# Keep as-is unless you changed redirect URI in Google Cloud
GMAIL_REDIRECT_URI=http://localhost:3000/oauth2callback
# Optional custom paths/filters
GMAIL_TOKEN_PATH=./.gmail-token.json
GMAIL_QUERY=is:unread from:(github.com OR vercel.com) newer_than:7d
GMAIL_MAX_RESULTS=10

# IMAP alternative (recommended if OAuth gets annoying)
GMAIL_IMAP_USER=homersampsonbot@gmail.com
GMAIL_IMAP_APP_PASSWORD=your_16_char_app_password_here
# IMAP search query, examples:
#   UNSEEN
#   UNSEEN FROM "vercel"
#   UNSEEN SUBJECT "Deployment Failed"
GMAIL_IMAP_QUERY=UNSEEN
GMAIL_IMAP_MAX=10
